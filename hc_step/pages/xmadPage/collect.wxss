.xmad-h5 {
    height: 100%;
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

view {
    box-sizing: border-box;
}

.swiper-container {
    width: 100%;
    height: 360rpx;
}

.image-container {
    display: flex;
}

.form-container {
    padding: 30rpx;
}

.xmad-h5 .form-title {
    text-align: left;
}

.xmad-h5 .form-title .h2 {
    font-size: 32rpx;
    font-weight: 700;
    padding: 10rpx 0;
}

.xmad-h5 .form-content {
    font-size: 28rpx;
}

.xmad-h5 .easy-button {
    display: flex;
    margin-top: 20rpx;
}

.xmad-h5 button.sub-button {
    width: 100%;
    height: 80rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    background-color: #ff7300!important;
}

.xmad-h5 .form-item {
    display: flex;
    width: 100%;
    margin-top: 30rpx;
    align-items: center;
}

.xmad-h5 .radio+.radio {
    margin-left: 30rpx;
}

.xmad-h5 .form-item input,.xmad-h5 .item-textarea,.xmad-h5 picker {
    width: 100%;
    min-height: 80rpx;
    border: 1px solid #f0f0f0;
}

.xmad-h5 picker view {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 2%;
    overflow: hidden;
}

.xmad-h5 .placeholder {
    color: #888;
}

.xmad-h5 .form-item input {
    padding: 0 2%;
}

.xmad-h5 .form-item textarea {
    width: 100%;
    height: 240rpx;
    padding: 2%;
    box-sizing: border-box;
}

.xmad-h5 .contact {
    position: fixed;
    right: 30rpx;
    bottom: 40rpx;
    width: auto;
    z-index: 9999;
}

.xmad-h5 .contact image {
    width: 144rpx;
    height: 144rpx;
}

.xmad-h5 .showBtn {
    display: block;
}

.xmad-h5 .hideBtn {
    display: none;
    width: 0;
    height: 0;
}