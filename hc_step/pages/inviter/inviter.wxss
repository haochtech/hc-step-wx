.bushid {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.bidhtext {
    width: 33%;
    height: 230rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    justify-content: space-between;
}

.bidhtext image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 100%;
}

.bidhtext text {
    color: #333333;
    font-size: 25rpx;
}