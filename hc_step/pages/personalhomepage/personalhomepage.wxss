@import "../topic/topic.wxss";

page {
}

.img {
    width: 100%;
    height: 231rpx;
    position: relative;
}

.big_head_portrait {
    filter: blur(18rpx);
    height: 231rpx;
    width: 100%;
}

.xsaaacdas {
    width: 150rpx;
    height: 151rpx;
    border-radius: 100%;
    border: 1px solid #fff;
    position: absolute;
    bottom: -30rpx;
    left: 30rpx;
    z-index: 1;
}

.mask {
    position: absolute;
    width: 100%;
    height: 231rpx;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.15);
}

.nick_name {
    position: absolute;
    left: 222rpx;
    width: 300rpx;
    height: 20rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 30rpx;
    bottom: 82rpx;
    color: white;
}

.head_portrait {
    height: 150rpx;
    width: 150rpx;
    position: absolute;
    z-index: 9;
    border-radius: 50%;
    bottom: -32rpx;
    left: 29rpx;
    background-color: white;
}

.head_ima {
    bottom: -32rpx;
    left: 29rpx;
    position: absolute;
    width: 150rpx;
    height: 150rpx;
    overflow: hidden;
    border-radius: 50%;
    will-change: transform;
    border: 2rpx solid #fff;
}

.outid {
    position: absolute;
    left: 222rpx;
    width: 300rpx;
    height: 20rpx;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 30rpx;
    bottom: 37rpx;
    color: white;
}

.partake {
    display: flex;
    position: absolute;
    right: 30rpx;
    bottom: 18rpx;
}

.partake button {
    width: 125rpx;
    height: 45rpx;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    background: #a67ef2;
    justify-content: center;
    color: #fff;
    font-size: 25rpx;
}

.partake text {
    width: 125rpx;
    height: 45rpx;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    background: #a67ef2;
    justify-content: center;
    color: #fff;
    font-size: 25rpx;
    margin-left: 20rpx;
}

.interven {
    width: 100%;
    display: flex;
    margin-top: 40rpx;
    justify-content: center;
}

.interven_xinsi {
    width: 30%;
    height: 85rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
}

.interven_xinsi text {
    font-size: 28rpx;
}

.interven_bod {
    position: relative;
}

.interven_bod::before {
    content: '';
    width: 0;
    border: 1rpx solid #f1eeee;
    height: 70%;
    top: 15%;
    right: 0;
    position: absolute;
}